{
  "name": "layer",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "web": "pnpm -F @layer/web",
    "app": "pnpm -F @layer/app",
    "dev": "pnpm -r --parallel run dev",
    "lint": "pnpm -r --parallel run lint",
    "build": "pnpm -r --parallel run build",
    "build:app": "pnpm build --filter=\"...{./apps/app}\"",
    "build:web": "pnpm build --filter=\"...{./apps/web}\""
  },
  "devDependencies": {
    "typescript": "^5.5.4"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "typescript"
      ]
    }
  },
  "dependencies": {
    "lerna": "^8.1.8"
  }
}
